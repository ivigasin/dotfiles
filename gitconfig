[user]
    email = nethunter@studiosh.com
    name  = David Tabachnikov

[alias]
    st       = status
    ci       = commit
    br       = branch
    co       = checkout
    df       = diff --color
    dc       = diff --color --cached
    lg       = log -p --color
    who      = shortlog -s --
    lp       = log --graph --pretty=format:'%Cred%h%Creset â€” %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --color
    undo     = reset --hard
    lol      = log --graph --decorate --pretty=oneline --abbrev-commit
    lola     = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls       = ls-files
    git      = "!f() { git \"$@\"; }; f"
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
    ours     = "!f() { git checkout --ours $@ && git add $@; }; f"
    heirs    = "!f() { git checkout --theirs $@ && git add $@; }; f"
    grog     = log --graph --abbrev-commit --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\"


# coloring!
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
	default = simple
